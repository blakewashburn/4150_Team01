<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddMealActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a Meal"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        >
    </TextView>

    <Button
        android:id="@+id/take_photo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Photo"
        android:textSize="@dimen/reg_text_size_portrait"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/button_background"
        android:textAlignment="center"
        android:textColor="@color/white"
        >
    </Button>

    <ImageView
        android:id="@+id/add_photo_meal_log"
        android:contentDescription="Photo to take"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        >
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Describe the meal type below:"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        >
    </TextView>

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingStart="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_button_meat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Meat"
            android:textColor="@color/black"
            android:onClick="onRadioButtonClicked" />

        <RadioButton
            android:id="@+id/radio_button_starch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starch"
            android:textColor="@color/black"
            android:onClick="onRadioButtonClicked" />

        <RadioButton
            android:id="@+id/radio_button_vegetable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vegetable"
            android:textColor="@color/black"
            android:onClick="onRadioButtonClicked" />

        <RadioButton
            android:id="@+id/radio_button_fruit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fruit"
            android:textColor="@color/black"
            android:onClick="onRadioButtonClicked" />
    </RadioGroup>

    <Button
        android:id="@+id/save_photo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Photo"
        android:textSize="@dimen/reg_text_size_portrait"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/button_background"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:onClick="savePhoto"
        >
    </Button>

</LinearLayout>