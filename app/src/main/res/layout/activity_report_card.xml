<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportCardActivity">


    <TextView
        android:id="@+id/report_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location-Based Report Card"
        android:textSize="40sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
    </TextView>

    <Button
        android:id="@+id/detect_location_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detect My Location"
        app:layout_constraintTop_toBottomOf="@+id/report_card_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/select_state_button"
        >
    </Button>

    <!-- This will need to be changed to a spinner such that the user can choose a state from a list -->
    <Button
        android:id="@+id/select_state_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select A state"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/detect_location_button"
        app:layout_constraintTop_toBottomOf="@+id/report_card_title"
        >
    </Button>


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="State:" >
            </TextView>
            <TextView
                android:id="@+id/state_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeholder" >
            </TextView>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="State Grade:" >
            </TextView>
            <TextView
                android:id="@+id/state_grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeholder" >
            </TextView>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Extreme Heat:" >
            </TextView>
            <TextView
                android:id="@+id/extreme_heat_grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeholder" >
            </TextView>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Drought:" >
            </TextView>
            <TextView
                android:id="@+id/drought_grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeholder" >
            </TextView>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WildFires:" >
            </TextView>
            <TextView
                android:id="@+id/wildfires_grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeholder" >
            </TextView>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inland Flooding:" >
            </TextView>
            <TextView
                android:id="@+id/inland_flooding_grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeholder" >
            </TextView>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coastal Flooding:" >
            </TextView>
            <TextView
                android:id="@+id/coastal_flooding_grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeholder" >
            </TextView>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>