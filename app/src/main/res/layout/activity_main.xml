<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CO2UT"
        android:textSize="60sp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
    </TextView>

    <TextView
        android:id="@+id/fights_climate_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The app that helps FIGHT climate change!"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
    </TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/climate_change"
        android:contentDescription="World asking to be saved"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="60dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/detect_activity_button_homepage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recommend Task Based on Activity"
            android:textAlignment="center"></Button>

        <Button
            android:id="@+id/carbon_calc_button_homepage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate Your \nCarbon Footprint"
            android:textAlignment="center"></Button>

        <Button
            android:id="@+id/meal_log_button_homepage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Access My Meal Log"
            >
        </Button>

        <Button
            android:id="@+id/report_card_button_homepage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Location Based \nClimate Report Card"
            >
        </Button>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>